<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="experiment_corner">
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- カメラ設定（シナリオ中心の俯瞰） -->
    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose>2.5 1.5 10.0 0 1.5708 0</pose>
        <view_controller>orbit</view_controller>
      </camera>
    </gui>

    <!-- 壁 (2.0x2.0x1.0m): 占有領域 x:[2.5,4.5], y:[1.5,3.5] -->
    <model name='corner_wall'>
      <pose>3.5 2.5 0.5 0 0 0</pose>
      <static>true</static>
      <link name='link'>
        <collision name='collision'>
          <geometry><box><size>2.0 2.0 1.0</size></box></geometry>
        </collision>
        <visual name='visual'>
          <geometry><box><size>2.0 2.0 1.0</size></box></geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- ゴール地点 (5.0, 1.0) -->
    <model name='goal_marker'>
      <pose>5.0 1.0 0.01 0 0 0</pose>
      <static>true</static>
      <link name='link'>
        <visual name='center'>
          <geometry>
            <sphere><radius>0.1</radius></sphere>
          </geometry>
          <material>
            <ambient>0 1 0 1</ambient>
            <diffuse>0 1 0 1</diffuse>
            <emissive>0 0.3 0 1</emissive>
          </material>
        </visual>
      </link>
    </model>

    <!-- 物理設定 -->
    <physics name='default_physics' default='0' type='ode'>
      <gravity>0 0 -9.8066</gravity>
      <ode>
        <solver>
          <type>quick</type>
          <iters>50</iters>
          <sor>1.0</sor>
        </solver>
        <constraints>
          <cfm>0</cfm>
          <erp>0.2</erp>
          <contact_max_correcting_vel>100</contact_max_correcting_vel>
          <contact_surface_layer>0.001</contact_surface_layer>
        </constraints>
      </ode>
      <max_step_size>0.004</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>250</real_time_update_rate>
    </physics>
  </world>
</sdf>
